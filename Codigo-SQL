CREATE TABLE PROVEEDOR
(
  NOMBRE VARCHAR(50) NOT NULL,
  ULTIMA_ENTREGA DATE,
  PRIMERA_ENTREGA DATE,
  NUMERO_TELF VARCHAR(50) NOT NULL,
  RUC VARCHAR(10) NOT NULL,
  PRIMARY KEY (RUC)
);

CREATE TABLE PRODUCTO
(
  PRECIO VARCHAR(6) NOT NULL,
  NOMBRE VARCHAR(50) NOT NULL,
  TIPO VARCHAR(50) NOT NULL,
  VENCIMIENTO DATE NOT NULL,
  CODIGO_PROD INT NOT NULL,
  PRIMARY KEY (CODIGO_PROD)
);

CREATE TABLE EMPLEADOS
(
  NOMBRE VARCHAR(100) NOT NULL,
  DNI VARCHAR(8) NOT NULL,
  CONTRATO DATE NOT NULL,
  SALARIO INT NOT NULL,
  TELEFONO VARCHAR(12) NOT NULL,
  PRIMARY KEY (DNI)
  
);

CREATE TABLE CLIENTE(
  NOMBRE VARCHAR2(50),
  DIRECCION VARCHAR2(50) NOT NULL,
  TELEFONO_CLIEN NUMBER NOT NULL,
  ULTIMO_PEDIDO DATE,
  PRIMARY KEY (NOMBRE)
);

CREATE TABLE PEDIDO(
  CODIGO NUMBER,
  CANT_COMPRA NUMBER NOT NULL,
  MONTO_TOTAL NUMBER NOT NULL,
  FECHA DATE NOT NULL,
  TIPO_PEDIDO VARCHAR2(50) NOT NULL,
  PRIMARY KEY(CODIGO)
);

CREATE TABLE "USUARIOS" 
   (	"ID" NUMBER, 
	"NOMBRE" VARCHAR2(200 BYTE), 
	"CORREO" VARCHAR2(200 BYTE), 
	"PASS" VARCHAR2(50 BYTE), 
	"ROL" VARCHAR2(20 BYTE)
   ) ;
   
   

CREATE TABLE DETALLE 
(
  ID NUMBER NOT NULL 
, ID_PRO NUMBER NOT NULL 
, CANTIDAD NUMBER NOT NULL 
, PRECIO NUMBER(10, 2) NOT NULL 
, ID_VENTA NUMBER NOT NULL 
) ;

